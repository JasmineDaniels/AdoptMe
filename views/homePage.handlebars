<div id="homepage">
  <header class="text-center">
    <h4><b>Thinking about getting a pet?</b><h4><br>
    <h4>Every year hundereds of thousands of pepole choose to adopt!
      Wonderful pets of all types, breeds and ages are available <br>
      just waiting for your loving home.
      Please click on the heart so we can help match you with the perfect pet. 
    </h4>
    <br>
  </header>
  
  <section>
    <form class="was-validated"> 
      <div class="form-group">
        <select class="custom-select" required>
          <option value="">What are you looking for?</option>
          <option value="1">Dog</option>
          <option value="2">Cat</option>
          <option value="3">Three</option>
        </select>
    <br><br>
        <div class="form-group">
        <select class="custom-select" required>
          <option value="">Breed</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
    <br><br>
        <div class="form-group">
        <select class="custom-select" required>
          <option value="">Gender</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
    <br><br>
        <div class="form-group">
        <select class="custom-select" required>
          <option value="">Age</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
    <br><br>
        <div class="form-group">
        <select class="custom-select" required>
          <option value="">Weight</option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
    <br><br>
      <div class="form-group">
        <select class="custom-select" required>
          <option value="">Type:</option>
          <option value="1">Cat</option>
          <option value="2">Dog</option>
        </select>
    <br><br>
        <button class="btn btn-dark" type="submit">Submit form</button>
    </form>
  </section>


  <section class="container">
    <div>
      <h2 id="group-type" style="font:bold; font-family:Verdana, Geneva, Tahoma, sans-serif"></h2>
    </div>
    {{!-- Slider --}}
      <div class="slide-container swiper">
          <div class="slide-content">
              {{!-- {{#each dogs as |dog|}} --}}
              <div class="card-wrapper swiper-wrapper">
                  {{#each pets as |pet|}}
                  <div class="card text-center swiper-slide">
                      <div class="card-header">
                          <h3 class="name"> {{pet.Pet_name}}</h3>
                      </div>
                      <div class="image-content my-3">
                          <div class="card-image">
                              <img src={{pet.photos}} alt="{{pet.breed}}" class="card-img">
                          </div>
                      </div>
                      <div class="card-content mx-2">
                          <p class="description">
                                  {{pet.description}}
                              </p>
                              <p id="view-details1">
                                  <span class="breed-header"> Breed: <span class="breed-type">{{pet.breeds}}</span></span>
                                  <br>
                                  <span class="age-header"> Age: <span class="breed-type"> {{pet.Age}} </span></span>
                                  <br>
                                  <span class="detailed-desc">Type: <span class="breed-type"> {{pet.type}} </span></span>
                                  <br>
                                  <span class="detailed-desc">ID: <span class="breed-type"> {{pet.petfinder_id}} </span></span>
                              </p>
                              <!-- <button onclick="showMore()" type="button" class="btn btn-info btn-rounded"> View More...</button> -->
                              {{!-- <a class="toggleBtn" style="color: rgb(0, 85, 255);" onclick= showMore()> View More &raquo;</a> --}}
                      </div>
                      <div class="card-footer">
                          <button type="button" class="btn btn-success btn-rounded">Contact</button>
                          <button type="button" class="btn btn-primary btn-rounded">
                              <i class="fa-solid fa-heart"></i>
                          </button>
                      </div>

                      
                  </div>
                  {{/each}} 
              </div>
              {{!-- {{/each}} --}}
              {{!-- Navigation Buttons --}}
              <div class="swiper-button-next swiper-navBtn"></div>
              <div class="swiper-button-prev swiper-navBtn"></div>
              <div class="swiper-pagination"></div>
          </div>
      </div>
  </section>


</div>


