<section class="container mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Please do not hesitate to contact us directly. <br> Our team will come back to you within
        a matter of hours to help you.
    </p>
    <div class="container my-5">
        {{!-- <span class="contact-list"> <span class="contact-info"> {{photos}} </span></span> --}}
        <div class="contact-image">
            <img src={{photos}} alt="{{breeds}}" class="card-img">
        </div>
        <br>
        <span class="contact-list">Name: <span class="contact-info"> {{Pet_name}} </span></span>
        <br>
        <span class="contact-list">ID: <span class="contact-info"> {{petfinder_id}} </span></span>
        <br>
        <span class="contact-list">Breed: <span class="contact-info"> {{breeds}} </span></span>
        <br>
        <span class="contact-list">Age: <span class="contact-info"> {{Age}} </span></span>
        <br>
        <span class="contact-list">Description: 
            <span class="contact-info"> {{description}} </span>
        </span>

    </div>

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" class="contact-forms" action="https://formsubmit.co/c7a6b6fa74e4993a860196f136b23d2b" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control">
                            <label for="name" class="">Your name</label>
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">

                        <div class="md-form mb-0">
                            <input type="text" id="email" name="email" class="form-control" required>
                            <label for="email" class="">Your email</label>

                            
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" name="subject" class="form-control">
                            <label for="subject" class="">Subject</label>
                            <input type="hidden" name="_subject" value={{petfinder_id}}>
                        </div>
                    </div>
                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                            <label for="message">Your message</label>
                        </div>

                    </div>
                </div>
                <!--Grid row-->

            </form>

            <div class="text-center text-md-left">
                <button id="submit-form" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Submit</button>

                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header d-flex justify-content-md-center" style="background-color: blue; color: #fff">
                                <h5 class="modal-title"> Success</h5>
                                {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal"></button> --}}
                            </div>
                            <div class="modal-body mb-3">
                                <h3> Congratulations! </h3> <br> <h5> We have recieved your adoption form! <br> One of our team members will contact you shortly. </h5>
                            </div>
                            <div class="modal-footer d-flex justify-content-md-center">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="status"></div>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>San Francisco, CA 94126, USA</p>
                </li>

                <li><i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+ 01 234 567 89</p>
                </li>

                <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>contact@AdoptMe.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

</section>
<!--Section: Contact v.2-->

<script src="/JavaScript/form-submit.js" type="module"></script>
